<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER_LEFT" hgap="10" vgap="10">
    <padding>
        <Insets top="40" right="40" left="40" bottom="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200" maxWidth="Infinity" halignment="CENTER"/>
    </columnConstraints>
    <Label text="Principal Amount" GridPane.rowIndex="0" alignment="CENTER" GridPane.columnIndex="0" textFill="black" GridPane.columnSpan="2">
        <font>
            <Font name="Arial" size="20"/>
        </font>
    </Label>
         <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" alignment="CENTER_LEFT" fx:id="principalTextField"/>

    <Label text="interest " GridPane.rowIndex="3" alignment="CENTER_LEFT" GridPane.columnIndex="0" textFill="black" GridPane.columnSpan="2">
        <font>
            <Font name="Arial" size="20"/>
        </font>
    </Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" alignment="CENTER_LEFT" fx:id="interestTextField" />

    <Label text="number of years " GridPane.rowIndex="5" alignment="CENTER_LEFT" GridPane.columnIndex="0" textFill="black" GridPane.columnSpan="2">
        <font>
            <Font name="Arial" size="20"/>
        </font>
    </Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="6" alignment="CENTER_LEFT" fx:id="numberOfYearsTextField"/>
    <Button text="Calculate" defaultButton="true" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" textFill="white"
            fx:id="calculateButton" onAction="#onCalculate" style="-fx-background-color:blue">
        <GridPane.margin>
            <Insets top="20" bottom="20"/>
        </GridPane.margin>
    </Button>
    </GridPane>
